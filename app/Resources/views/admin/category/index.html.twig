{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_news_index' %}

{% block main %}
    <h1>{{ 'Category list' }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'Title' }}</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'Slug' }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Actions' }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in categories %}
            <tr>
                <td>{{ item.title }}</td>
                <td>{{ item.slug }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_category_show', { id: item.id }) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i>{{ 'Show' }}
                        </a>

                        <a href="{{ path('admin_category_edit', { id: item.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Edit' }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'No categories found' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_category_add') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'Create category' }}
        </a>
    </div>

    {{ parent() }}

{% endblock %}
