{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>{{ 'Add a News' }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.excerpt) }}
        {{ form_row(form.content) }}
        {{ form_row(form.created) }}
        {{ form_row(form.isPublished) }}
        {{ form_row(form.tags) }}
        {{ form_row(form.category) }}

        <input type="submit" value="{{ 'Create a News' }}" class="btn btn-primary" />
        {#{{ form_widget(form.saveAndCreateNew, { label: 'label.save_and_create_new', attr: { class: 'btn btn-primary' } }) }}#}
        {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_news_index') }}" class="btn btn-lg btn-block btn-primary">
            <i class="fa fa-list" aria-hidden="true"></i> {{ 'To News List' }}
        </a>
    </div>
    {{ parent() }}

{% endblock %}
